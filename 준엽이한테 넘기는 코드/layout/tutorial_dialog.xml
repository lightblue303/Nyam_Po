<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView_tutorial"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="튜토리얼 이미지" />

    <LinearLayout
        android:id="@+id/tutorial_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/button_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이전"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_closet_left"
            android:textColor="#000000"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="다음"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/rounded_button"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="닫기"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_closet_right"
            android:textColor="#000000"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
